<% @sample ||= sample %>

<%= partial :"sample/header", :locals => {sample: @sample} %>

<% if @sample.images %>
<div class="row">
<div class="twocol">
<h2>Images (<%=@sample.images.count %>)</h2>
	<% @sample.images.select {|f| f.title == 'Height | FLATTEN | REMOVEDPOLYBG (2,2)'}.each do |image| %>
		<%= svg_tag(image,'one-third') %>
	<% end %>
</div>
</div>
<% end %>

<%= partial :"_editor", :locals => {url: "#{request.fullpath}"} %>