<div class="row header">
	<div style="float:left">
		<p class="meta"></p>
		<h1 class="entry-title"><%=@datetime.day%> <%=Date::MONTHNAMES[@datetime.month]%> <%=@datetime.year%></h1>
	</div>

	<div style="float:right">
		<ul id="parameters">
			<li><%= @sdfs.size %> files</li>
		</ul>
	</div>
</div>

<div class="row">
<ul class="timelist">
<% for sdf in @sdfs %>
  <% date = sdf.datetime %>
  <li>
	<a href="raw/<%=sdf.xml.xpath('/SPM/Package/Filename').first.content%>">
	<div class="time"><h3><%= date.hour %>:<%= sprintf('%02d',date.minute) %></h3></div>
	<div class="desc"><h3><%=sdf.xml.xpath('/SPM/Package/Type').first.content%> - <%=sdf.xml.xpath('/SPM/Package/Filename').first.content%></h3></div>
	</a>
</li>
<% end %>
</ul>
</div>
